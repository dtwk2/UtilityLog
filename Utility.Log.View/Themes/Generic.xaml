<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infrastructure="clr-namespace:Pcs.Hfrr.Log.View.Infrastructure"
    xmlns:splat="clr-namespace:Splat;assembly=Splat">

    <DataTemplate DataType="{x:Type splat:LogLevel}">
        <TextBlock Text="{Binding Level}">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{Binding Level, Converter={x:Static infrastructure:Converter.LogLevelConverter}}" />
            </TextBlock.Foreground>
        </TextBlock>
    </DataTemplate>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Utility.Log.View;component/Themes/MaterialDesignTheme.AppToolBar.xaml" />
        <ResourceDictionary Source="/Utility.Log.View;component/Themes/MaterialDesignTheme.Dragablz.xaml" />
        <ResourceDictionary Source="/Utility.Log.View;component/Deprecated/LogHost.xaml" />
        <ResourceDictionary Source="/Utility.Log.View;component/Themes/Window.xaml" />
        <ResourceDictionary Source="/Utility.Log.View;component/Themes/LogGrid.xaml" />
        <ResourceDictionary Source="/Utility.Log.View;component/ProgressBar/FlashThumb.xaml" />
        <ResourceDictionary Source="/Utility.Log.View;component/ProgressBar/TimedSlider.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>